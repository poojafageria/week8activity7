<!-- updatecontacts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Update Contacts</title>
  <link rel="stylesheet" href="/css/styles.css" />
  <!-- Link to external stylesheet -->
</head>
<body>
  <nav class="navbar">
    <h1>My Contacts</h1>
    <div class="links">
      <a href="/">Home</a>
      <a class="new-item-link" href="/addcontacts">New Contacts</a>
    </div>
  </nav>

  <div class="content">
    <div class="update">
      <h2>Update Contacts</h2>
      <form action="/single-contacts/<%= contacts._id %>?_method=PUT" method="POST">
        <label>Title:</label>
        <input type="text" value="<%= contacts.title %>" id="title" name="title" required />

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required><%= contacts.description %></textarea>

        <label for="targetDate">Target Date:</label>
        <input type="date" id="targetDate" name="targetDate" required value="<%= contacts.targetDate.to ISOString().substr(0, 10) %>" />

        <label>Author:</label>
        <select name="author">
          <option value="sami">Sami</option>
          <option value="rami">Rami</option>
        </select>

        <label for="achieved">Achieved:</label>
        <input type="checkbox" id="achieved" name="achieved" <% if (contacts.achieved) { %>checked<% } %> />

        <button type="submit">Update Contacts</button>
      </form>
    </div>
  </div>
</body>
</html>